generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// ============================================
// ADMIN & AUTHENTICATION
// ============================================

model AdminUser {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  email      String   @unique
  password   String
  name       String?
  isApproved Boolean  @default(false) // Requires admin approval
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model PasswordResetToken {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String
  token     String   @unique
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
}

// ============================================
// SITE SETTINGS & SEO
// ============================================

model SiteSettings {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  key          String   @unique // "general", "seo", "contact"
  value        Json     // Flexible JSON for any settings
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

// ============================================
// HOMEPAGE SECTIONS
// ============================================

model HomepageSection {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  sectionKey  String   @unique // "hero", "intro", "benefits", "faq", etc.
  title       String?  // Optional display title for dashboard
  content     Json     // Flexible JSON for section content
  order       Int      @default(0) // Display order
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// ============================================
// PAGES (About, Contact, Privacy, etc.)
// ============================================

model Page {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  slug        String   @unique
  title       String
  content     Json?    // Rich content as JSON
  seoTitle    String?
  seoDesc     String?
  seoKeywords String?
  isPublished Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// ============================================
// PRODUCTS & CATEGORIES
// ============================================

model ProductCategory {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  slug        String    @unique
  description String?
  imageUrl    String?
  seoTitle    String?
  seoDesc     String?
  sections    Json?    // List of dynamic sections
  order       Int       @default(0)
  isActive    Boolean   @default(true)
  products    Product[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Product {
  id          String          @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  slug        String          @unique
  description String?
  shortDesc   String?
  images      String[]
  minOrder    Int?            @default(100)
  price       Float?
  categoryId  String          @db.ObjectId
  category    ProductCategory @relation(fields: [categoryId], references: [id])
  
  // Specifications
  dimensions  String?
  materials   String?
  finishings  String?
  
  content     Json?    // Generic content
  sections    Json?    // List of dynamic sections
  
  // SEO
  seoTitle    String?
  seoDesc     String?

  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

// ============================================
// INQUIRIES / QUOTE REQUESTS
// ============================================

model Inquiry {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  name       String
  email      String
  phone      String?
  company    String?
  
  // Quote Details
  boxType    String?
  quantity   String?
  dimensions String?
  material   String?
  color      String?
  turnaround String?
  message    String?
  type       String?  @default("quote")
  details    Json?
  
  status     String   @default("PENDING") // PENDING, REPLIED, CLOSED
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
// ============================================
// BLOG SYSTEM (SEO & EEAT)
// ============================================

model Author {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  slug        String     @unique
  image       String?
  role        String?    @default("Editor")
  bio         String?
  socialLinks Json?      // { twitter: "", linkedin: "", website: "" }
  posts       BlogPost[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model BlogCategory {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  slug        String     @unique
  description String?
  posts       BlogPost[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model BlogPost {
  id          String        @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  slug        String        @unique
  excerpt     String?
  content     String        // HTML or formatted text
  mainImage   String?
  
  // Relations
  authorId    String?       @db.ObjectId
  author      Author?       @relation(fields: [authorId], references: [id])
  categoryId  String?       @db.ObjectId
  category    BlogCategory? @relation(fields: [categoryId], references: [id])

  // SEO
  seoTitle    String?
  seoDesc     String?
  seoKeywords String?
  schema_json Json?         // For custom Article schema
  
  isPublished Boolean       @default(false)
  publishedAt DateTime?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}
