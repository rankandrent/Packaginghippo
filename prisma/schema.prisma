generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// ============================================
// ADMIN & AUTHENTICATION
// ============================================

model AdminUser {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  email      String   @unique
  password   String
  name       String?
  isApproved Boolean  @default(false) // Requires admin approval
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model PasswordResetToken {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String
  token     String   @unique
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
}

// ============================================
// SITE SETTINGS & SEO
// ============================================

model SiteSettings {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  key          String   @unique // "general", "seo", "contact"
  value        Json     // Flexible JSON for any settings
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

// ============================================
// HOMEPAGE SECTIONS
// ============================================

model HomepageSection {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  sectionKey  String   @unique // "hero", "intro", "benefits", "faq", etc.
  title       String?  // Optional display title for dashboard
  content     Json     // Flexible JSON for section content
  order       Int      @default(0) // Display order
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// ============================================
// PAGES (About, Contact, Privacy, etc.)
// ============================================

model Page {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  slug        String   @unique
  title       String
  content     Json?    // Rich content as JSON
  seoTitle    String?
  seoDesc     String?
  seoKeywords String?
  descriptionCollapsedHeight Int @default(300)
  isPublished Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// ============================================
// PRODUCTS & CATEGORIES
// ============================================

model ProductCategory {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  slug        String    @unique
  description String?
  imageUrl    String?
  seoTitle    String?
  seoDesc     String?
  seoKeywords String?
  descriptionCollapsedHeight Int @default(300)
  sections    Json?    // List of dynamic sections
  layout      Json?    // Custom order: ['content', 'related_categories', 'quote_form', 'testimonials']
  order       Int       @default(0)
  isActive    Boolean   @default(false)
  products    Product[]
  testimonials Testimonial[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Product {
  id          String          @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  slug        String          @unique
  description String?
  shortDesc   String?
  images      String[]
  minOrder    Int?            @default(100)
  price       Float?
  categoryId  String          @db.ObjectId
  category    ProductCategory @relation(fields: [categoryId], references: [id])
  relatedProductIds String[]  @db.ObjectId // Manually curated related products
  
  // Specifications
  dimensions  String?
  materials   String?
  finishings  String?
  
  content     Json?    // Generic content
  sections    Json?    // List of dynamic sections
  layout      Json?    // Custom section layout order
  
  // SEO
  seoTitle    String?
  seoDesc     String?
  seoKeywords String?
  descriptionCollapsedHeight Int @default(300)
  tabs        Json?    // Tabbed content: specification, box_features, materials, printing_methods, inks, finishing, addons

  isActive    Boolean   @default(false)
  isTopProduct Boolean  @default(false)
  isFeaturedInCategory Boolean @default(false)
  testimonials Testimonial[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

// ============================================
// INQUIRIES / QUOTE REQUESTS
// ============================================

model Inquiry {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  name       String
  email      String
  phone      String?
  company    String?
  
  // Quote Details
  boxType    String?
  quantity   String?
  dimensions String?
  material   String?
  color      String?
  turnaround String?
  message    String?
  type       String?  @default("quote")
  details    Json?
  
  sourceUrl  String?
  sourcePage String?
  
  status     String   @default("PENDING") // PENDING, REPLIED, CLOSED, SPAM
  isSpam     Boolean  @default(false)
  spamScore  Float    @default(0)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
// ============================================
// BLOG SYSTEM (SEO & EEAT)
// ============================================

model Author {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  slug        String     @unique
  image       String?
  role        String?    @default("Editor")
  bio         String?
  socialLinks Json?      // { twitter: "", linkedin: "", website: "" }
  seoTitle    String?
  seoDesc     String?
  posts       BlogPost[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model BlogCategory {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  slug        String     @unique
  description String?
  posts       BlogPost[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model BlogPost {
  id          String        @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  slug        String        @unique
  excerpt     String?
  content     String        // HTML or formatted text
  mainImage   String?
  
  // Relations
  authorId    String?       @db.ObjectId
  author      Author?       @relation(fields: [authorId], references: [id])
  categoryId  String?       @db.ObjectId
  category    BlogCategory? @relation(fields: [categoryId], references: [id])

  // SEO
  seoTitle    String?
  seoDesc     String?
  seoKeywords String?
  descriptionCollapsedHeight Int @default(300)
  schema_json Json?         // For custom Article schema
  
  isPublished Boolean       @default(false)
  isFeatured  Boolean       @default(false)
  publishedAt DateTime?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

// ============================================
// TESTIMONIALS
// ============================================

model Testimonial {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  role      String? // e.g., "CEO, Company X"
  content   String
  rating    Float    @default(5.0)
  image     String? // Avatar URL
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  productId String? @db.ObjectId
  product   Product? @relation(fields: [productId], references: [id])
  
  categoryId String? @db.ObjectId
  category   ProductCategory? @relation(fields: [categoryId], references: [id])
}

model Redirect {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  sourceUrl   String   @unique
  targetUrl   String
  type        Int      @default(301)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model PageTemplate {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  type      String   // 'product' | 'category'
  sections  Json     @default("[]")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
