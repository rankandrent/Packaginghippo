generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// ============================================
// ADMIN & AUTHENTICATION
// ============================================

model AdminUser {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// ============================================
// SITE SETTINGS & SEO
// ============================================

model SiteSettings {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  key          String   @unique // "general", "seo", "contact"
  value        Json     // Flexible JSON for any settings
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

// ============================================
// HOMEPAGE SECTIONS
// ============================================

model HomepageSection {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  sectionKey  String   @unique // "hero", "intro", "benefits", "faq", etc.
  title       String?  // Optional display title for dashboard
  content     Json     // Flexible JSON for section content
  order       Int      @default(0) // Display order
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// ============================================
// PAGES (About, Contact, Privacy, etc.)
// ============================================

model Page {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  slug        String   @unique
  title       String
  content     Json?    // Rich content as JSON
  seoTitle    String?
  seoDesc     String?
  seoKeywords String?
  isPublished Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// ============================================
// PRODUCTS & CATEGORIES
// ============================================

model ProductCategory {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  slug        String    @unique
  description String?
  imageUrl    String?
  seoTitle    String?
  seoDesc     String?
  sections    Json?    // List of dynamic sections
  order       Int       @default(0)
  isActive    Boolean   @default(true)
  products    Product[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Product {
  id          String          @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  slug        String          @unique
  description String?
  shortDesc   String?
  images      String[]
  minOrder    Int?            @default(100)
  price       Float?
  categoryId  String          @db.ObjectId
  category    ProductCategory @relation(fields: [categoryId], references: [id])
  
  // Specifications
  dimensions  String?
  materials   String?
  finishings  String?
  
  content     Json?    // Generic content
  sections    Json?    // List of dynamic sections
  
  // SEO
  seoTitle    String?
  seoDesc     String?

  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

// ============================================
// INQUIRIES / QUOTE REQUESTS
// ============================================

model Inquiry {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  name       String
  email      String
  phone      String?
  company    String?
  
  // Quote Details
  boxType    String?
  quantity   String?
  dimensions String?
  material   String?
  color      String?
  turnaround String?
  message    String?
  
  status     String   @default("PENDING") // PENDING, REPLIED, CLOSED
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
